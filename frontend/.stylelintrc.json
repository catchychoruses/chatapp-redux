{
  "plugins": ["stylelint-scss", "stylelint-order"],
  "extends": "stylelint-config-standard-scss",
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "color-hex-length": "long",
    "indentation": 4,
    "string-quotes": "single"
  }
}
