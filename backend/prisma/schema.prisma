generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
  schemas   = ["chatapp"]
}

model ChatUser {
  ID         String       @id @default(uuid())
  username   String
  email      String
  password   String
  token      String
  roomMember RoomMember[]

  @@schema("chatapp")
}

model RoomMember {
  memberID   Int       @id @unique @default(autoincrement())
  userID     String
  roomID     String
  timeJoined DateTime
  messages   Message[]
  room       Room      @relation(fields: [roomID], references: [roomID])
  user       ChatUser  @relation(fields: [userID], references: [ID])

  @@schema("chatapp")
}

model Room {
  roomID      String       @id @unique @default(uuid())
  messages    Message[]
  roomMembers RoomMember[]

  @@schema("chatapp")
}

model Message {
  messageID Int        @id @unique @default(autoincrement())
  memberID  Int
  content   String
  timeSent  DateTime
  roomID    String
  seen      Boolean?
  sentBy    RoomMember @relation(fields: [memberID], references: [memberID])
  room      Room       @relation(fields: [roomID], references: [roomID])

  @@schema("chatapp")
}
