{
  "name": "@chatapp-redux/backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "build": " npx prisma generate && npx tsc",
    "start": "nodemon - exec 'ts-node' api/index.js",
    "dev": "nodemon - exec 'ts-node' index.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings=0",
    "lint-fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings=0 --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "@types/cors": "^2.8.14",
    "@types/express-serve-static-core": "^4.17.37",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/dist/"
    ],
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript"
    ],
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "off",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "arrow-parens": [
        "off"
      ],
      "import/prefer-default-export": [
        "off"
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
      "operator-linebreak": "off"
    }
  }
}
